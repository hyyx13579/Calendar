<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_ppw"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_below="@+id/up_arrow"
            android:layout_marginTop="-4dp"
            android:background="@drawable/informationbg"
            android:orientation="vertical"
            android:padding="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <RelativeLayout
                android:id="@+id/rv_time"
                android:layout_width="match_parent"
                android:layout_height="40dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="2016-08-07 周二" />


                <TextView
                    android:id="@+id/tv_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/border_color" />


            </RelativeLayout>

            <ListView
                android:id="@+id/lv_ppw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rv_time"></ListView>


        </LinearLayout>


        <ImageView
            android:id="@+id/up_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/slice_xhdpi" />

        <ImageView
            android:id="@+id/down_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_ppw"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-4.5dp"
            android:background="@drawable/down_arrow_drawable" />
    </RelativeLayout>
</FrameLayout>

